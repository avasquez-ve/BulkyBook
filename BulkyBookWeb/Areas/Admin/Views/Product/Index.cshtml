<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create new Product
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblProductData" class="table table-bordered table-striped" style="width: 100%;">
        <thead>
            <tr class="table-primary">
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Cover Type</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col">ISBN</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr class="loading-container">
                <td colspan="7">
                    <div class="loader-container">
                        <div class="loader"></div>
                        <div class="loading-text">Loading...</div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}